<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chrissebesta.nyccyclemap.MainActivity">
    <!--<Button-->
        <!--android:id="@+id/initialDataButton"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Get initial cycle data" />-->
    <!--<Button-->
        <!--android:id="@+id/refreshbutton"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/update" />-->

    <!--<Button-->
    <!--android:id="@+id/brooklynButton"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Brooklyn" />-->

    <Button
        android:id="@+id/clearSQL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear SQL DB" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#737373" />
    <!--<ImageView-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_width="match_parent"-->
        <!--android:src="@android:drawable/divider_horizontal_dim_dark" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"
            android:src="@drawable/redwhitebike" />

        <CheckedTextView
            android:id="@+id/injuredCheckedTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:checked="true"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:text="@string/injuredcyclists" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#737373" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"
            android:src="@drawable/blackwhitebike" />

        <CheckedTextView
            android:id="@+id/killedCheckedView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:checked="true"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:text="@string/killedcyclists" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#737373" />

    <TextView
        android:id="@+id/yearMappingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:paddingTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/startDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0"/>
        <com.appyvet.rangebar.RangeBar
            android:id="@+id/materialRangeBarWithDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/endDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0"/>
    </LinearLayout>

    <Button
        android:id="@+id/mapDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map Databse" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/loadingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="16dp"
            android:singleLine="false"
            android:text="@string/loadingmessage"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
